# Define each variable appropriately and rename this file to .env, it will be used by compose.yaml

# Base path on the host for all persistent Docker data (volumes)
DOCKER_VOLUMES=/path/to/your/docker/volumes

# PostgreSQL database credentials
POSTGRES_DB=gitea
POSTGRES_USER=gitea
POSTGRES_PASSWORD='your_secret_password'

# Gitea application settings
APP_NAME='Gitea Hosting'
ROOT_URL=https://git.yourdomain.com/

# SMTP settings for sending emails
SMTP_HOST=your.smtp.server:587
SMTP_USER=gitea@yourdomain.com
SMTP_PASSWORD='your_smtp_password'
SMTP_FROM="${APP_NAME} <${SMTP_USER}>"

# Whitelist of hosts Gitea is allowed to send webhooks to
WEBHOOK_ALLOWED_HOST_LIST=jenkins.yourdomain.com